mixin header(arg)
	header.header
		.container
			.header-content
				a(href="index.html").logo Best Reviews By Consumers
				.header-menu
					ul
						each item in arg
							if item.addClass
								li.active
									a(href="" +item.link) #{item.title}
							else
								li
									a(href="" +item.link) #{item.title}						
				a(href="#!").header-button.button-light.w-200  The Very Best of ...
				.menu-toggle
					span


mixin floatHeader
	header.header.header-floating
		.container
			.header-content
				.header-left
					a(href="index.html").logo bestofpersonalloans.com
					a(href="#!").text-link.d-none.d-lg-block Credible Review
				.header-right
					a(href="#!").page-button#float-btn  Get your rate now
					a(href="index.html").button-light Close
					a(href="index.html").page-close.d-flex.d-md-none
						+close

mixin loan-card(label, imgSrc, title, per1, per2)
	.loan-card
		a(href="review.html").loan-card__inner
			.card-label !{label}
			.loan-card__head
				img(src="img/cards/"+ imgSrc +".jpg", width="335"  alt="logo")
			.loan-card__body
				.loan-card__title
					.head-4
						h4 !{title}
					.page-tooltip
						span ?
						.page-tooltip__box
							p Lenders often determine loan approval based on combo of loan purpose & amount
				.flex-inner
					.loan-card__terms
						.terms-item.green-text
							p !{per1}%
							p Min APP
						.terms-item
							p !{per2} 
								span years
							p MAX loan term
					.loan-card__rating
						.rating-star
							+star
							+star
							+star
							+star
							+star
						.rating-info
							p 2,619 reviews on Starpilot
			.loan-card__footer
				.button-link Review
		a(href="#!" data-toggle="modal" data-target="#modalForm").page-button.w-200 Get your rate
